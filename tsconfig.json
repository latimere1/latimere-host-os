{
  /* -----------------------------------------------------------------------
     tsconfig.json – Latimere Host OS
     • two alias entries so legacy  "@/src/…" paths still work
     • baseUrl set to project root for cleaner imports
     --------------------------------------------------------------------- */
  "compilerOptions": {
    /* ---- language & emit ---------------------------------------------- */
    "target":                "ES2017",
    "module":                "esnext",
    "lib":                   ["dom", "dom.iterable", "esnext"],
    "jsx":                   "preserve",
    "incremental":           true,
    "noEmit":                true,

    /* ---- strictness & interop ----------------------------------------- */
    "strict":                true,
    "skipLibCheck":          true,
    "allowJs":               true,
    "esModuleInterop":       true,
    "resolveJsonModule":     true,
    "isolatedModules":       true,
    "allowSyntheticDefaultImports": true,

    /* ---- module resolution / path aliases ----------------------------- */
    "moduleResolution":      "bundler",
    "baseUrl":               ".",              // <-- project root
    "paths": {
      "@/*":      ["src/*"],  // NEW preferred alias  →  "@/components/…"
      "@/src/*":  ["src/*"]   // Legacy alias kept alive until all files migrate
    },

    /* ---- Next.js plugin ----------------------------------------------- */
    "plugins": [{ "name": "next" }]
  },

  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
